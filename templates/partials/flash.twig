{# Flash Messages #}
{% if flash %}
    <div class="space-y-2 mb-4">
        {% for type, message in flash %}
            {% set bgColor = 'bg-blue-50 border-blue-200 text-blue-700' %}
            {% set icon = 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z' %}
            
            {% if type == 'success' %}
                {% set bgColor = 'bg-green-50 border-green-200 text-green-700' %}
                {% set icon = 'M5 13l4 4L19 7' %}
            {% elseif type == 'error' %}
                {% set bgColor = 'bg-red-50 border-red-200 text-red-700' %}
                {% set icon = 'M6 18L18 6M6 6l12 12' %}
            {% elseif type == 'warning' %}
                {% set bgColor = 'bg-yellow-50 border-yellow-200 text-yellow-700' %}
                {% set icon = 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z' %}
            {% endif %}
            
            <div x-data="{ show: true }" 
                 x-show="show"
                 x-transition:enter="transition ease-out duration-300"
                 x-transition:enter-start="transform translate-x-full opacity-0"
                 x-transition:enter-end="transform translate-x-0 opacity-100"
                 x-transition:leave="transition ease-in duration-300"
                 x-transition:leave-start="transform translate-x-0 opacity-100"
                 x-transition:leave-end="transform translate-x-full opacity-0"
                 class="flex items-center p-4 border rounded-lg {{ bgColor }} animate-in">
                <svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ icon }}"></path>
                </svg>
                <span class="flex-1">{{ message }}</span>
                <button @click="show = false" class="ml-3 inline-flex flex-shrink-0">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </button>
            </div>
        {% endfor %}
    </div>
{% endif %}