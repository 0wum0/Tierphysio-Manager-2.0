{% extends 'layouts/base.twig' %}

{% block title %}{{ owner.first_name }} {{ owner.last_name }} - Besitzerdetails{% endblock %}

{% block content %}
<div class="space-y-6 animate-in">
    <!-- Header Section -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-3xl font-heading font-bold bg-gradient-to-r from-purple-400 to-indigo-400 bg-clip-text text-transparent">
                Besitzerdetails
            </h1>
            <p class="text-gray-600 dark:text-gray-400 mt-2">
                {{ owner.first_name }} {{ owner.last_name }}
                {% if owner.customer_number %}
                    - Kundennr: {{ owner.customer_number }}
                {% endif %}
            </p>
        </div>
        <div class="mt-4 sm:mt-0 flex gap-2">
            <a href="/public/owners.php?action=edit&id={{ owner.id }}" 
               class="inline-flex items-center px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Bearbeiten
            </a>
            <a href="/public/owners.php" 
               class="inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Zurück
            </a>
        </div>
    </div>

    <!-- Owner Information -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Contact Information -->
        <div class="bg-white/10 dark:bg-gray-800/50 backdrop-blur-md rounded-2xl border border-purple-500/20 p-6 shadow-xl">
            <h2 class="text-xl font-semibold text-purple-600 dark:text-purple-400 mb-4">
                <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                Kontaktinformationen
            </h2>
            <dl class="space-y-3">
                <div>
                    <dt class="text-sm text-gray-600 dark:text-gray-400">Name</dt>
                    <dd class="text-gray-900 dark:text-white font-medium">
                        {{ owner.first_name|default('') }} {{ owner.last_name|default('') }}
                        {% if owner.title %}
                            ({{ owner.title }})
                        {% endif %}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm text-gray-600 dark:text-gray-400">E-Mail</dt>
                    <dd class="text-gray-900 dark:text-white">
                        {% if owner.email %}
                            <a href="mailto:{{ owner.email }}" class="text-purple-600 hover:text-purple-700 dark:text-purple-400">
                                {{ owner.email }}
                            </a>
                        {% else %}
                            <span class="text-gray-500">-</span>
                        {% endif %}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm text-gray-600 dark:text-gray-400">Telefon</dt>
                    <dd class="text-gray-900 dark:text-white">
                        {% if owner.phone %}
                            <a href="tel:{{ owner.phone }}" class="text-purple-600 hover:text-purple-700 dark:text-purple-400">
                                {{ owner.phone }}
                            </a>
                        {% else %}
                            <span class="text-gray-500">-</span>
                        {% endif %}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm text-gray-600 dark:text-gray-400">Mobil</dt>
                    <dd class="text-gray-900 dark:text-white">
                        {% if owner.mobile %}
                            <a href="tel:{{ owner.mobile }}" class="text-purple-600 hover:text-purple-700 dark:text-purple-400">
                                {{ owner.mobile }}
                            </a>
                        {% else %}
                            <span class="text-gray-500">-</span>
                        {% endif %}
                    </dd>
                </div>
            </dl>
        </div>

        <!-- Address Information -->
        <div class="bg-white/10 dark:bg-gray-800/50 backdrop-blur-md rounded-2xl border border-purple-500/20 p-6 shadow-xl">
            <h2 class="text-xl font-semibold text-purple-600 dark:text-purple-400 mb-4">
                <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Adresse
            </h2>
            <dl class="space-y-3">
                <div>
                    <dt class="text-sm text-gray-600 dark:text-gray-400">Straße</dt>
                    <dd class="text-gray-900 dark:text-white">{{ owner.street|default('-') }}</dd>
                </div>
                <div>
                    <dt class="text-sm text-gray-600 dark:text-gray-400">PLZ / Ort</dt>
                    <dd class="text-gray-900 dark:text-white">
                        {% if owner.postal_code or owner.city %}
                            {{ owner.postal_code|default('') }} {{ owner.city|default('') }}
                        {% else %}
                            -
                        {% endif %}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm text-gray-600 dark:text-gray-400">Land</dt>
                    <dd class="text-gray-900 dark:text-white">{{ owner.country|default('Deutschland') }}</dd>
                </div>
                <div>
                    <dt class="text-sm text-gray-600 dark:text-gray-400">Erstellt am</dt>
                    <dd class="text-gray-900 dark:text-white">
                        {% if owner.created_at %}
                            {{ owner.created_at|date('d.m.Y H:i') }} Uhr
                        {% else %}
                            -
                        {% endif %}
                    </dd>
                </div>
            </dl>
        </div>
    </div>

    <!-- Patients Section -->
    <div class="bg-white/10 dark:bg-gray-800/50 backdrop-blur-md rounded-2xl border border-purple-500/20 p-6 shadow-xl">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-semibold text-purple-600 dark:text-purple-400">
                <svg class="w-6 h-6 inline-block mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M4.5 10.5C4.5 12.9853 6.51472 15 9 15C11.4853 15 13.5 12.9853 13.5 10.5C13.5 8.01472 11.4853 6 9 6C6.51472 6 4.5 8.01472 4.5 10.5Z"/>
                </svg>
                Patienten ({{ patients|length }})
            </h2>
            <a href="/public/patients.php?action=new&owner_id={{ owner.id }}" 
               class="inline-flex items-center px-3 py-1 bg-purple-600 text-white text-sm rounded-lg hover:bg-purple-700 transition-colors">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Neuer Patient
            </a>
        </div>
        
        {% if patients|length > 0 %}
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="text-xs uppercase text-gray-700 dark:text-gray-400 border-b border-purple-500/30">
                        <tr>
                            <th class="px-4 py-2 text-left">Name</th>
                            <th class="px-4 py-2 text-left">Art</th>
                            <th class="px-4 py-2 text-left">Rasse</th>
                            <th class="px-4 py-2 text-left">Geburtsdatum</th>
                            <th class="px-4 py-2 text-right">Aktionen</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-purple-500/10">
                        {% for patient in patients %}
                        <tr class="hover:bg-purple-500/5 transition-colors">
                            <td class="px-4 py-2 text-gray-900 dark:text-white">
                                {{ patient.name }}
                            </td>
                            <td class="px-4 py-2 text-gray-600 dark:text-gray-400">
                                {{ patient.species|default('-') }}
                            </td>
                            <td class="px-4 py-2 text-gray-600 dark:text-gray-400">
                                {{ patient.breed|default('-') }}
                            </td>
                            <td class="px-4 py-2 text-gray-600 dark:text-gray-400">
                                {% if patient.birth_date %}
                                    {{ patient.birth_date|date('d.m.Y') }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td class="px-4 py-2 text-right">
                                <a href="/public/patients.php?action=view&id={{ patient.id }}" 
                                   class="text-purple-600 hover:text-purple-700 dark:text-purple-400 text-sm">
                                    Details
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-gray-500 dark:text-gray-400 text-center py-4">
                Keine Patienten vorhanden
            </p>
        {% endif %}
    </div>

    <!-- Recent Invoices -->
    {% if invoices|length > 0 %}
    <div class="bg-white/10 dark:bg-gray-800/50 backdrop-blur-md rounded-2xl border border-purple-500/20 p-6 shadow-xl">
        <h2 class="text-xl font-semibold text-purple-600 dark:text-purple-400 mb-4">
            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Letzte Rechnungen
        </h2>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="text-xs uppercase text-gray-700 dark:text-gray-400 border-b border-purple-500/30">
                    <tr>
                        <th class="px-4 py-2 text-left">Nr.</th>
                        <th class="px-4 py-2 text-left">Patient</th>
                        <th class="px-4 py-2 text-left">Datum</th>
                        <th class="px-4 py-2 text-right">Betrag</th>
                        <th class="px-4 py-2 text-center">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-purple-500/10">
                    {% for invoice in invoices %}
                    <tr class="hover:bg-purple-500/5 transition-colors">
                        <td class="px-4 py-2 text-gray-900 dark:text-white">
                            {{ invoice.invoice_number|default('-') }}
                        </td>
                        <td class="px-4 py-2 text-gray-600 dark:text-gray-400">
                            {{ invoice.patient_name|default('-') }}
                        </td>
                        <td class="px-4 py-2 text-gray-600 dark:text-gray-400">
                            {% if invoice.invoice_date %}
                                {{ invoice.invoice_date|date('d.m.Y') }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td class="px-4 py-2 text-right text-gray-900 dark:text-white">
                            {{ invoice.total_amount|number_format(2, ',', '.') }} €
                        </td>
                        <td class="px-4 py-2 text-center">
                            {% if invoice.status == 'paid' %}
                                <span class="px-2 py-1 text-xs bg-green-500/20 text-green-600 dark:text-green-400 rounded-full">Bezahlt</span>
                            {% elseif invoice.status == 'pending' %}
                                <span class="px-2 py-1 text-xs bg-yellow-500/20 text-yellow-600 dark:text-yellow-400 rounded-full">Offen</span>
                            {% else %}
                                <span class="px-2 py-1 text-xs bg-red-500/20 text-red-600 dark:text-red-400 rounded-full">Überfällig</span>
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}

    <!-- Notes -->
    {% if notes|length > 0 %}
    <div class="bg-white/10 dark:bg-gray-800/50 backdrop-blur-md rounded-2xl border border-purple-500/20 p-6 shadow-xl">
        <h2 class="text-xl font-semibold text-purple-600 dark:text-purple-400 mb-4">
            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Notizen
        </h2>
        <div class="space-y-3">
            {% for note in notes %}
            <div class="border-l-4 border-purple-500 pl-4 py-2">
                <p class="text-gray-900 dark:text-white">{{ note.content }}</p>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                    von {{ note.creator_first_name }} {{ note.creator_last_name }} 
                    am {{ note.created_at|date('d.m.Y H:i') }}
                </p>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}