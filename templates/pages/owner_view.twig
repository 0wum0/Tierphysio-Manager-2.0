{% extends 'base.twig' %}
{% block content %}
<div class="p-4">
  <h1 class="text-2xl font-bold mb-4">🐾 Besitzer bearbeiten</h1>
  <form method="post" action="owners.php?action=update" class="grid grid-cols-2 gap-4">
    <input type="hidden" name="id" value="{{ owner.id }}">
    <div><label>Vorname</label><input name="first_name" value="{{ owner.first_name }}" class="border p-2 w-full rounded"></div>
    <div><label>Nachname</label><input name="last_name" value="{{ owner.last_name }}" class="border p-2 w-full rounded"></div>
    <div><label>E-Mail</label><input name="email" value="{{ owner.email }}" class="border p-2 w-full rounded"></div>
    <div><label>Telefon</label><input name="phone" value="{{ owner.phone }}" class="border p-2 w-full rounded"></div>
    <div><label>Mobil</label><input name="mobile" value="{{ owner.mobile }}" class="border p-2 w-full rounded"></div>
    <div><label>Ort</label><input name="city" value="{{ owner.city }}" class="border p-2 w-full rounded"></div>
    <div class="col-span-2">
      <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Speichern</button>
      <a href="owners.php" class="bg-gray-600 text-white px-4 py-2 rounded ml-2">Zurück</a>
    </div>
  </form>

  <h2 class="text-xl font-semibold mt-8 mb-2">🐶 Zugeordnete Patienten</h2>
  {% if patients|length == 0 %}
    <p class="text-gray-400">Keine Patienten vorhanden.</p>
  {% else %}
    <ul class="list-disc pl-5">
      {% for p in patients %}
        <li>{{ p.name }} ({{ p.species }}, {{ p.breed }})</li>
      {% endfor %}
    </ul>
  {% endif %}
</div>
{% endblock %}