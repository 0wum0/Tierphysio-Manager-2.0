<script>
    // Animation on page load
    document.addEventListener('DOMContentLoaded', () => {
        anime({
            targets: '.animate-in > *',
            translateY: [30, 0],
            opacity: [0, 1],
            duration: 800,
            delay: anime.stagger(100),
            easing: 'easeOutExpo'
        });
    });
</script>
