{% extends 'base.twig' %}
{% block content %}
<div class="p-4">
  <h1 class="text-2xl font-bold mb-4">🐾 Besitzerübersicht</h1>
  <form method="get" class="mb-4 flex gap-2">
    <input type="text" name="search" value="{{ search }}" placeholder="Suche nach Name oder E-Mail" class="border p-2 rounded w-64">
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Suchen</button>
  </form>

  {% if owners|length == 0 %}
    <p class="text-gray-400">Keine Besitzer gefunden.</p>
  {% else %}
    <table class="min-w-full border border-gray-700 text-sm">
      <thead class="bg-gray-800 text-gray-200">
        <tr>
          <th class="px-2 py-1 text-left">Name</th>
          <th class="px-2 py-1">E-Mail</th>
          <th class="px-2 py-1">Telefon</th>
          <th class="px-2 py-1 text-center">Patienten</th>
        </tr>
      </thead>
      <tbody>
      {% for o in owners %}
        <tr class="hover:bg-gray-700 cursor-pointer" onclick="window.location='owners.php?action=view&id={{ o.id }}'">
          <td class="px-2 py-1">{{ o.first_name }} {{ o.last_name }}</td>
          <td class="px-2 py-1">{{ o.email }}</td>
          <td class="px-2 py-1">{{ o.phone }}</td>
          <td class="px-2 py-1 text-center">{{ o.patient_count }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% endif %}
</div>
{% endblock %}