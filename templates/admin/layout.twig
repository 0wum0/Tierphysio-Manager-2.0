<!DOCTYPE html>
<html lang="de" x-data="{ 
    darkMode: localStorage.getItem('tp-admin-theme') === 'dark',
    sidebarOpen: true,
    init() {
        this.$watch('darkMode', value => {
            localStorage.setItem('tp-admin-theme', value ? 'dark' : 'light');
            if (value) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        });
        
        // Apply saved theme on load
        if (this.darkMode) {
            document.documentElement.classList.add('dark');
        }
    }
}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ title|default('Admin') }}{% endblock %} - Tierphysio Admin</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: {
                            DEFAULT: '#9b5de5',
                            dark: '#7C4DFF'
                        },
                        accent: '#6c63ff'
                    }
                }
            }
        }
    </script>
    
    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <!-- Custom Styles -->
    <style>
        .glass-panel {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }
        .dark .glass-panel {
            background: rgba(30, 30, 30, 0.95);
        }
        .gradient-bg {
            background: linear-gradient(135deg, #9b5de5 0%, #7C4DFF 50%, #6c63ff 100%);
        }
    </style>
    
    {% block head %}{% endblock %}
</head>
<body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        {% include 'admin/partials/sidebar.twig' %}
        
        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Topbar -->
            {% include 'admin/partials/topbar.twig' %}
            
            <!-- Main Content -->
            <main class="flex-1 overflow-y-auto p-4 md:p-6">
                <!-- Flash Messages -->
                {% include 'admin/partials/flash.twig' %}
                
                <!-- Page Content -->
                {% block content %}{% endblock %}
            </main>
            
            <!-- Footer -->
            <footer class="border-t border-gray-200 dark:border-gray-700 px-6 py-4 text-center text-sm text-gray-600 dark:text-gray-400">
                &copy; {{ "now"|date("Y") }} Tierphysio Manager 2.0 - Admin Panel
            </footer>
        </div>
    </div>
    
    <!-- CSRF Token for JavaScript -->
    <script>
        window.csrfToken = '{{ csrf_token }}';
    </script>
    
    {% block scripts %}{% endblock %}
</body>
</html>