{% extends 'admin/layout.twig' %}

{% block content %}
<div class="space-y-6">
    <!-- Welcome Message -->
    <div class="glass-panel rounded-lg p-6">
        <h1 class="text-2xl font-bold mb-2">Willkommen zurück, {{ user.name }}!</h1>
        <p class="text-gray-600 dark:text-gray-400">Hier ist eine Übersicht über Ihr System.</p>
    </div>
    
    <!-- Statistics Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Users Card -->
        <div class="glass-panel rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400">Benutzer</p>
                    <p class="text-2xl font-bold">{{ stats.users_count }}</p>
                </div>
                <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                    </svg>
                </div>
            </div>
        </div>
        
        <!-- Patients Card -->
        <div class="glass-panel rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400">Patienten</p>
                    <p class="text-2xl font-bold">{{ stats.patients_count }}</p>
                </div>
                <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                </div>
            </div>
        </div>
        
        <!-- Appointments Card -->
        <div class="glass-panel rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400">Anstehende Termine</p>
                    <p class="text-2xl font-bold">{{ stats.upcoming_appointments }}</p>
                </div>
                <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
            </div>
        </div>
        
        <!-- Updates Card -->
        <div class="glass-panel rounded-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400">Ausstehende Updates</p>
                    <p class="text-2xl font-bold">{{ stats.pending_updates }}</p>
                </div>
                <div class="w-12 h-12 bg-orange-100 dark:bg-orange-900 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
                    </svg>
                </div>
            </div>
            {% if stats.pending_updates > 0 %}
            <a href="/admin/update.php" class="mt-4 inline-block text-sm text-orange-600 dark:text-orange-400 hover:underline">
                Updates anzeigen →
            </a>
            {% endif %}
        </div>
    </div>
    
    <!-- System Information and Recent Activities -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- System Information -->
        <div class="glass-panel rounded-lg p-6">
            <h2 class="text-lg font-semibold mb-4">Systeminformationen</h2>
            <div class="space-y-3">
                <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">PHP Version</span>
                    <span class="font-mono">{{ system_info.php_version }}</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">MySQL Version</span>
                    <span class="font-mono">{{ system_info.db_version }}</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Server Software</span>
                    <span class="text-sm">{{ system_info.server_software }}</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Speichernutzung</span>
                    <span>{{ system_info.memory_usage }} / {{ system_info.memory_limit }}</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Max. Ausführungszeit</span>
                    <span>{{ system_info.max_execution_time }}</span>
                </div>
            </div>
        </div>
        
        <!-- Recent Activities -->
        <div class="glass-panel rounded-lg p-6">
            <h2 class="text-lg font-semibold mb-4">Letzte Aktivitäten</h2>
            <div class="space-y-3 max-h-64 overflow-y-auto">
                {% for activity in recent_activities %}
                <div class="flex items-start space-x-3 text-sm">
                    <div class="flex-shrink-0 w-2 h-2 mt-1.5 rounded-full {{ activity.status == 'success' ? 'bg-green-500' : (activity.status == 'failed' ? 'bg-red-500' : 'bg-yellow-500') }}"></div>
                    <div class="flex-1">
                        <p class="font-medium">{{ activity.job_name }}</p>
                        <p class="text-gray-600 dark:text-gray-400">{{ activity.started_at|date('d.m.Y H:i') }}</p>
                    </div>
                </div>
                {% else %}
                <p class="text-gray-500 dark:text-gray-400">Keine Aktivitäten vorhanden</p>
                {% endfor %}
            </div>
        </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="glass-panel rounded-lg p-6">
        <h2 class="text-lg font-semibold mb-4">Schnellaktionen</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a href="/admin/backup.php" class="flex flex-col items-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition">
                <svg class="w-8 h-8 text-primary mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                </svg>
                <span class="text-sm">Backup erstellen</span>
            </a>
            
            <a href="/admin/users.php" class="flex flex-col items-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition">
                <svg class="w-8 h-8 text-primary mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                </svg>
                <span class="text-sm">Neuer Benutzer</span>
            </a>
            
            <a href="/admin/email.php" class="flex flex-col items-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition">
                <svg class="w-8 h-8 text-primary mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <span class="text-sm">E-Mail testen</span>
            </a>
            
            <a href="/admin/cron.php" class="flex flex-col items-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition">
                <svg class="w-8 h-8 text-primary mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-sm">Cron Jobs prüfen</span>
            </a>
        </div>
    </div>
</div>
{% endblock %}